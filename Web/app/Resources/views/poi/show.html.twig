{% extends 'base.html.twig' %}

{% block body %}
    <h1>Poi</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ poi.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ poi.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ poi.address }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ poi.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ poi.longitude }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ poi.details }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ poi.image }}</td>
            </tr>
            <tr>
                <th>Workinghours</th>
                <td>{{ poi.workingHours }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ poi.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_poi_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_poi_edit', { 'id': poi.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
